<div class="element scoreboard">
    <div class="table">
        <div class="td hometeam">{{hometeam}}</div>
        <div class="td score">0 - 0</div>
        <div class="td awayteam">{{awayteam}}</div>
    </div>
</div>

<div class="element timeslider">
    <div class="table">
        <div class="td icon"><i class="fa fa-clock-o fa-2x"></i></div>
        <div class="td slider">
            <div class="meter">
                <span style="width: 40%"></span>
            </div>
        </div>
        <div class="td time">79&prime;</div>
    </div>
</div>

<h2 id="input-title"></h2>

<div class="row events">
    <div class="col-xs-12">
        <div class="eventtype">
            <div class="btn btn-block btn-square fnSelectEventType">
                <div class="title">Hvad</div>
                <div class="name"></div>
            </div>
        </div>
        <div id="match-inputtypes" class="eventinput">
            <div class="inputcontainer">

            </div>
        </div>
    </div>
</div>

<div id="match-selector" class="userinput">

</div>

