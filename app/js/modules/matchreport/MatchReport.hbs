<div class="row">
    <div class="col-sm-6">
        <img class="fnPitch" src="img/betterteam-pitch-vertical.svg" style="width: 100%"/>
    </div>
    <div class="col-sm-6">
        <div class="row">
            <div class="col-sm-12">
                {{#each observations}}
                    <button class="btn btn-scout {{type}}" data-type="{{@key}}">
                        <span class="count">{{count}}</span>
                        <span class="text">{{name}}</span>
                    </button>
                {{/each}}
            </div>
        </div>
    </div>
</div>
